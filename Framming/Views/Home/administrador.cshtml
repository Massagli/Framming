                <div class="favorite" id="favor">
                    <h1>Filmes em Destaque</h1>
             
                        <script>
                            var divRes = document.getElementById("favor")
                            fetch("https://framming-api.onrender.com/movies").then(resposta => {
                                return resposta.json()
                            }).then(corpo => {

                                for (pos = 0; pos <= corpo.length -1; pos++) {
                                    var nameMovie = document.createElement("p")
                                    var imgMovie = document.createElement("img")
                                    var container = document.createElement("span")
                                    var divisao = document.createElement("hr")
                                    var containerImg = document.createElement("div")
                                    divRes.appendChild(container)
                                    container.appendChild(containerImg)
                                    containerImg.appendChild(imgMovie)
                                    container.appendChild(nameMovie)
                                    divRes.appendChild(divisao)
                                    nameMovie.innerHTML = corpo[pos].title
                                    imgMovie.src = `https://image.tmdb.org/t/p/w500/${corpo[pos].poster_path}`
                                    imgMovie.className = "img_movie"
                                    nameMovie.className = "name_movie"
                                    container.className = "container_favorite"
                                    divisao.className = "divisa"
                                    containerImg.className = "container_img"
                                }



                                console.log(corpo.length)
                                console.log(corpo[corpo.length - 1])
                            })




